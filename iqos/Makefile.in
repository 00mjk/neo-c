#######################################################
# installed directories
#######################################################
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
datadir=@datadir@
mandir=@mandir@
sharedstatedir=@sharedstatedir@
sysconfdir=@sysconfdir@/sevenstars
includedir=@includedir@/sevenstars
datarootdir=@datarootdir@/sevenstars
docdir=@datadir@/doc
libdir=@libdir@


##########################################################
# environmnet variables
##########################################################
CC=@CC@
INSTALL=@INSTALL@
CFLAGS=@CFLAGS@
NCFLAGS=@NCFLAGS@
LIBS=@LIBS@
OS=@OS@
DESTDIR=@DESTDIR@
OBJS=@OBJS@
COMPILER_OBJS=@COMPILER_OBJS@

##########################################################
# main
##########################################################
all: iqos 
#	if which ctags > /dev/null; then if test $(OS) = DARWIN; then ctags src/*.c > /dev/null 2>&1; else ctags -R; fi; fi

iqos: config.h src/*.h Makefile configure src/main.nc
	$(CC) -o iqos src/main.nc $(CFLAGS) $(NCFLAGS) $(LIBS)

##########################################################
# objects
##########################################################
#src/parser.o: config.h src/*.h Makefile configure src/parser.nc
#	$(CC) -c src/parser.nc $(CFLAGS) $(NCFLAGS)

#########################################################
# install
#########################################################
install:
	mkdir -p $(DESTDIR)/share/sevenstars
#	$(INSTALL) -m 644 sevenstars.ss $(DESTDIR)/share/sevenstars

	mkdir -p "$(DESTDIR)/bin"
	$(INSTALL) -m 755 ./iqos "$(DESTDIR)/bin"

#########################################################
# uninstall
#########################################################
uninstall:
	rm -f "$(DESTDIR)"/bin/iqos

#########################################################
# permission
#########################################################
permission:
	chmod 644 *
	chmod 755 .git man src configure
	chmod 644 src/*.c
	chmod 644 src/*.h

########################################################
# clean
########################################################
clean:
	rm -fR iqos iqos.dSYM src/*.o src/*.out src/*.bc src/*.ll config.log config.status *.stackdump autom4te.cache .DS_Store core a.out *.out *.ssc

distclean: clean
	rm -fR  config.h Makefile autom4te.cache

########################################################
# test
########################################################
test: 
	@echo "Compile to test code..."
	./iqos

