#######################################################
# installed directories
#######################################################
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
datadir=@datadir@
mandir=@mandir@
sharedstatedir=@sharedstatedir@
sysconfdir=@sysconfdir@/clover3
includedir=@includedir@/clover3
datarootdir=@datarootdir@/clover3
docdir=@datadir@/doc
libdir=@libdir@


##########################################################
# environmnet variables
##########################################################
CC=@CC@
INSTALL=@INSTALL@
CFLAGS=@CFLAGS@
LIBS=@LIBS@
OS=@OS@
DESTDIR=@DESTDIR@
OBJS=@OBJS@
COMPILER_OBJS=@COMPILER_OBJS@

##########################################################
# main
##########################################################
all: cclover3
#	if which ctags > /dev/null; then if test $(OS) = DARWIN; then ctags src/*.c > /dev/null 2>&1; else ctags -R; fi; fi

cclover3: config.h src/*.h Makefile configure src/compiler.nc src/parser.o src/node.o src/type.o
	$(CC) -o cclover3 src/compiler.nc src/parser.o src/node.o src/type.o $(CFLAGS)

##########################################################
# objects
##########################################################
src/parser.o: config.h src/*.h Makefile configure src/parser.nc
	$(CC) -c src/parser.nc $(CFLAGS)

src/node.o: config.h src/*.h Makefile configure src/node.nc
	$(CC) -c src/node.nc $(CFLAGS)

src/type.o: config.h src/*.h Makefile configure src/type.nc
	$(CC) -c src/type.nc $(CFLAGS)

#########################################################
# install
#########################################################
install:
	mkdir -p $(DESTDIR)/share/clover3

	mkdir -p "$(DESTDIR)/bin"
	$(INSTALL) -m 755 ./clover3 "$(DESTDIR)/bin"
	$(INSTALL) -m 755 ./cclover3 "$(DESTDIR)/bin"

#########################################################
# uninstall
#########################################################
uninstall:
	rm -f "$(DESTDIR)"/bin/clover3
	rm -f "$(DESTDIR)"/bin/cclover3

#########################################################
# permission
#########################################################
permission:
	chmod 644 *
	chmod 755 .git man src configure
	chmod 644 src/*.c
	chmod 644 src/*.h
	chmod 755 update_clover.sh

########################################################
# clean
########################################################
clean:
	rm -fR clover3 clover3.dSYM cclover3 cclover3.dSYM src/*.o config.log config.status *.stackdump autom4te.cache .DS_Store core.* core a.out *.out

distclean: clean
	rm -fR  config.h Makefile autom4te.cache

########################################################
# test
########################################################
test: 
	@echo "Compile to test code..."
	./cclover3 code/HelloWorld.cl




