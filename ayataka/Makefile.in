#######################################################
# installed directories
#######################################################
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
datadir=@datadir@
mandir=@mandir@
sharedstatedir=@sharedstatedir@
sysconfdir=@sysconfdir@/sevenstars
includedir=@includedir@/sevenstars
datarootdir=@datarootdir@/sevenstars
docdir=@datadir@/doc
libdir=@libdir@


##########################################################
# environmnet variables
##########################################################
CC=@CC@
INSTALL=@INSTALL@
CFLAGS=@CFLAGS@
NCFLAGS=@NCFLAGS@
LIBS=@LIBS@
OS=@OS@
DESTDIR=@DESTDIR@
OBJS=@OBJS@
COMPILER_OBJS=@COMPILER_OBJS@

##########################################################
# main
##########################################################
all: ayataka 
#	if which ctags > /dev/null; then if test $(OS) = DARWIN; then ctags src/*.c > /dev/null 2>&1; else ctags -R; fi; fi

ayataka: config.h src/*.h Makefile configure src/main.nc src/filer.o
	$(CC) -o ayataka src/main.nc src/filer.o $(CFLAGS) $(NCFLAGS) $(LIBS) ../sevenstars/src/compiler.o ../sevenstars/src/interpreter.o ../sevenstars/src/parser.o ../sevenstars/src/node.o ../sevenstars/src/type.o ../sevenstars/src/class.o ../sevenstars/src/native.o ../sevenstars/src/native2.o ../sevenstars/src/native3.o ../sevenstars/src/native4.o ../sevenstars/src/native5.o ../sevenstars/src/native6.o ../sevenstars/src/vm.o ../sevenstars/src/vtable.o ../sevenstars/src/heap.o ../sevenstars/src/object.o ../sevenstars/src/block.o ../sevenstars/src/macro.o $(CFLAGS) $(NCFLAGS) $(LIBS)

##########################################################
# objects
##########################################################
src/filer.o: config.h src/*.h Makefile configure src/filer.nc
	$(CC) -c src/filer.nc $(CFLAGS) $(NCFLAGS)

#########################################################
# install
#########################################################
install:
	mkdir -p $(DESTDIR)/share/sevenstars
#	$(INSTALL) -m 644 sevenstars.ss $(DESTDIR)/share/sevenstars

	mkdir -p "$(DESTDIR)/bin"
	$(INSTALL) -m 755 ./ayataka "$(DESTDIR)/bin"

#########################################################
# uninstall
#########################################################
uninstall:
	rm -f "$(DESTDIR)"/bin/ayataka

#########################################################
# permission
#########################################################
permission:
	chmod 644 *
	chmod 755 .git man src configure
	chmod 644 src/*.c
	chmod 644 src/*.h

########################################################
# clean
########################################################
clean:
	rm -fR ayataka ayataka.dSYM src/*.o src/*.out src/*.bc src/*.ll config.log config.status *.stackdump autom4te.cache .DS_Store core a.out *.out *.ssc

distclean: clean
	rm -fR  config.h Makefile autom4te.cache

########################################################
# test
########################################################
test: 
	(cd ../..; ayataka)

